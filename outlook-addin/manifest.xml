<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp 
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">
  
  <!-- Basic Settings -->
  <Id>a9d8f7e6-5c4b-3a2d-1e0f-9b8a7c6d5e4f</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>ITSL Solutions</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  
  <!-- Display Name -->
  <DisplayName DefaultValue="Nextcloud Talk for Outlook">
    <Override Locale="sv-SE" Value="Nextcloud Talk för Outlook"/>
  </DisplayName>
  
  <!-- Description -->
  <Description DefaultValue="Add Nextcloud Talk meetings to Outlook calendar events">
    <Override Locale="sv-SE" Value="Lägg till Nextcloud Talk-möten i Outlook-kalenderhändelser"/>
  </Description>
  
  <!-- Icons -->
  <IconUrl DefaultValue="https://fredrikjonassonitsb.github.io/eneo-nextcloud-integration/outlook-addin/src/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://fredrikjonassonitsb.github.io/eneo-nextcloud-integration/outlook-addin/src/assets/icon-128.png"/>
  
  <!-- Support URL -->
  <SupportUrl DefaultValue="https://github.com/FredrikJonassonItsb/eneo-nextcloud-integration"/>
  
  <!-- App Domains -->
  <AppDomains>
    <AppDomain>https://fredrikjonassonitsb.github.io</AppDomain>
  </AppDomains>
  
  <!-- Hosts -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <!-- Requirements -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <!-- Form Settings (Required for validation, but ignored when VersionOverrides is present) -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://fredrikjonassonitsb.github.io/eneo-nextcloud-integration/outlook-addin/src/taskpane/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <!-- Permissions -->
  <Permissions>ReadWriteItem</Permissions>
  
  <!-- Rule -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Edit"/>
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Read"/>
  </Rule>
  
  <!-- Version Overrides -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
      
      <Requirements>
        <bt:Sets DefaultMinVersion="1.3">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>
      
      <Hosts>
        <Host xsi:type="MailHost">
          
          <!-- Desktop Form Factor -->
          <DesktopFormFactor>
            <FunctionFile resid="Commands.Url"/>
            
            <!-- Appointment Organizer -->
            <ExtensionPoint xsi:type="AppointmentOrganizerCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgReadGroup">
                  <Label resid="GroupLabel"/>
                  
                  <Control xsi:type="Button" id="msgReadOpenPaneButton">
                    <Label resid="TaskpaneButton.Label"/>
                    <Supertip>
                      <Title resid="TaskpaneButton.Label"/>
                      <Description resid="TaskpaneButton.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16"/>
                      <bt:Image size="32" resid="Icon.32x32"/>
                      <bt:Image size="80" resid="Icon.80x80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Taskpane.Url"/>
                    </Action>
                  </Control>
                  
                </Group>
              </OfficeTab>
            </ExtensionPoint>
            
            <!-- Appointment Attendee -->
            <ExtensionPoint xsi:type="AppointmentAttendeeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgReadAttendeeGroup">
                  <Label resid="GroupLabel"/>
                  
                  <Control xsi:type="Button" id="msgReadAttendeeOpenPaneButton">
                    <Label resid="TaskpaneButton.Label"/>
                    <Supertip>
                      <Title resid="TaskpaneButton.Label"/>
                      <Description resid="TaskpaneButton.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16"/>
                      <bt:Image size="32" resid="Icon.32x32"/>
                      <bt:Image size="80" resid="Icon.80x80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Taskpane.Url"/>
                    </Action>
                  </Control>
                  
                </Group>
              </OfficeTab>
            </ExtensionPoint>
            
          </DesktopFormFactor>
          
        </Host>
      </Hosts>
      
      <!-- Resources -->
      <Resources>
        <bt:Images>
          <bt:Image id="Icon.16x16" DefaultValue="https://fredrikjonassonitsb.github.io/eneo-nextcloud-integration/outlook-addin/src/assets/icon-16.png"/>
          <bt:Image id="Icon.32x32" DefaultValue="https://fredrikjonassonitsb.github.io/eneo-nextcloud-integration/outlook-addin/src/assets/icon-32.png"/>
          <bt:Image id="Icon.80x80" DefaultValue="https://fredrikjonassonitsb.github.io/eneo-nextcloud-integration/outlook-addin/src/assets/icon-80.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="Commands.Url" DefaultValue="https://fredrikjonassonitsb.github.io/eneo-nextcloud-integration/outlook-addin/src/commands/commands.html"/>
          <bt:Url id="Taskpane.Url" DefaultValue="https://fredrikjonassonitsb.github.io/eneo-nextcloud-integration/outlook-addin/src/taskpane/taskpane.html"/>
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="GroupLabel" DefaultValue="Nextcloud Talk">
            <bt:Override Locale="sv-SE" Value="Nextcloud Talk"/>
          </bt:String>
          <bt:String id="TaskpaneButton.Label" DefaultValue="Nextcloud Talk">
            <bt:Override Locale="sv-SE" Value="Nextcloud Talk"/>
          </bt:String>
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Add Nextcloud Talk meeting to this event">
            <bt:Override Locale="sv-SE" Value="Lägg till Nextcloud Talk-möte till denna händelse"/>
          </bt:String>
        </bt:LongStrings>
      </Resources>
      
    </VersionOverrides>
  </VersionOverrides>
  
</OfficeApp>

