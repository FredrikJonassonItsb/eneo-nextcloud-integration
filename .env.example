# =============================================================================
# Eneo + Nextcloud Integration - Environment Variables
# =============================================================================
# Kopiera denna fil till .env och fyll i dina värden
# cp .env.example .env

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
COMPOSE_PROJECT_NAME=eneo-nextcloud
DOMAIN=localhost
PROTOCOL=http

# =============================================================================
# NEXTCLOUD SETTINGS
# =============================================================================
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=changeme_secure_password
NEXTCLOUD_TRUSTED_DOMAINS=localhost

# Nextcloud Database
NEXTCLOUD_DB_TYPE=pgsql
NEXTCLOUD_DB_HOST=nextcloud-db
NEXTCLOUD_DB_NAME=nextcloud
NEXTCLOUD_DB_USER=nextcloud
NEXTCLOUD_DB_PASSWORD=changeme_nextcloud_db_password

# =============================================================================
# ENEO SETTINGS
# =============================================================================
ENEO_APP_NAME=Eneo
ENEO_APP_VERSION=1.0.0
ENEO_DEBUG=false

# Eneo API
ENEO_API_HOST=0.0.0.0
ENEO_API_PORT=8000
ENEO_API_SECRET_KEY=changeme_eneo_secret_key_min_32_characters_long

# Eneo Frontend
ENEO_FRONTEND_PORT=3000
ENEO_PUBLIC_API_URL=http://localhost/eneo/api

# Eneo Database (PostgreSQL with pgvector)
ENEO_DB_HOST=eneo-db
ENEO_DB_PORT=5432
ENEO_DB_NAME=eneo
ENEO_DB_USER=eneo
ENEO_DB_PASSWORD=changeme_eneo_db_password

# Eneo Redis
ENEO_REDIS_HOST=eneo-redis
ENEO_REDIS_PORT=6379
ENEO_REDIS_PASSWORD=changeme_eneo_redis_password

# =============================================================================
# OAUTH2 SETTINGS (SSO Integration)
# =============================================================================
# Dessa värden får du efter att ha registrerat Eneo som OAuth2-klient i Nextcloud
OAUTH2_CLIENT_ID=
OAUTH2_CLIENT_SECRET=
OAUTH2_AUTHORIZE_URL=http://localhost/index.php/apps/oauth2/authorize
OAUTH2_TOKEN_URL=http://localhost/index.php/apps/oauth2/api/v1/token
OAUTH2_USERINFO_URL=http://localhost/ocs/v2.php/cloud/user
OAUTH2_REDIRECT_URI=http://localhost/eneo/oauth/callback

# =============================================================================
# AI MODEL SETTINGS
# =============================================================================
# Lokal AI-modell (t.ex. LLaMA, GPT4All)
AI_MODEL_TYPE=local
AI_MODEL_NAME=llama2
AI_MODEL_PATH=/models/llama-2-7b-chat.gguf

# Alternativt: OpenAI-kompatibelt API (för test)
# AI_MODEL_TYPE=openai
# OPENAI_API_KEY=your-api-key-here
# OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# VECTOR DATABASE SETTINGS (pgvector)
# =============================================================================
VECTOR_DIMENSION=384
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# TRAEFIK SETTINGS (Reverse Proxy)
# =============================================================================
TRAEFIK_LOG_LEVEL=INFO
TRAEFIK_DASHBOARD_ENABLED=true
TRAEFIK_DASHBOARD_PORT=8080

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Session
SESSION_LIFETIME=3600
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# CORS
CORS_ORIGINS=http://localhost,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Workers
ENEO_WORKERS=4
ENEO_WORKER_CONNECTIONS=1000

# Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/eneo/app.log

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEV_MODE=false
HOT_RELOAD=false

